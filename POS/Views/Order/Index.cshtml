@model POS.Models.ViewModel.OrderViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "Order", FormMethod.Post))
{
    <fieldset>
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-10">
                    <h4>Search By</h4>
                    <hr />
                    <div >
                        @Html.LabelFor(model => model.Customer.Name, new { @class = "control-label col-md-2" })
                        @Html.DropDownListFor(model => model.CustomerId, Model.CustomerSelectListItems, "<------Select------>")
                    </div>
                    <br />
                    <div>
                        @Html.LabelFor(model => model.Item.ItemName, new { @class = "control-label col-md-2" })
                        @Html.DropDownListFor(model => model.ItemId, Model.ItemSelectListItems, "<------Select------>")
                        &nbsp;
                        <input type="submit" value="Filter" class="btn btn-info" />
                    </div>
                    <br />
                </div>
            </div>
        </div>
    </fieldset>
}

<p>
    @Html.ActionLink("Create New", "Edit")
</p>
<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item.ItemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unitprice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>

@foreach (var item in Model.Orders) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item.ItemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unitprice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalPrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { orderId=item.OrderId }) 

            
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { orderId = item.OrderId }) 
        </td>
    </tr>
}

</table>
